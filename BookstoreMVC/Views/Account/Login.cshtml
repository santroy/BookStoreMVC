@model BookstoreMVC.ViewModels.LoginViewModels
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_RightSectionLayout.cshtml";
}

<h2>Logowanie</h2>
<hr />



<div>

   @using (@Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
   {
    @Html.AntiForgeryToken()

    <div id="login-error">
        @Html.ValidationMessage("loginerror", "")
    </div>

        <table id="login-table" style="margin-left: auto; margin-right: auto;">
            <tr>
                <td>@Html.LabelFor(o => o.Email, "E-mail")</td>
                <td>
                    @Html.TextBoxFor(o => o.Email)
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.Email)
                    </div>
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(o => o.Password, "Hasło")</td>
                <td>
                    @Html.PasswordFor(o => o.Password)
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.Password)
                    </div>
                </td>
                <td></td>
            </tr>
            <tr>
                <td colspan="3">
                    <div class="checkbox" style="margin-bottom: 10px;">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @checked = "checked" })
                        @Html.LabelFor(m => m.RememberMe)
                    </div>

                    <input type="submit" value="Zaloguj" class="submitLink" style=" height: 40px;" />
                </td>
            </tr>
        </table>
   }

    <a href="@Url.Action("Register")">Nie mam jeszcze konta</a>

    @using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()

        <button type="submit" class="btn-auth btn-facebook" id="FacebookLoginButton" name="provider" value="Facebook" title="Log in using your Facebook account">Sign in with <b>Facebook</b></button>

        <button type="submit" class="btn-auth btn-google" id="GoogleLoginButton" name="provider" value="Google" title="Log in using your Google account">Sign in with <b>Google</b></button>

    }

</div>

@section ScriptsBottom {
   
<script src="~/scripts/jquery-3.1.1.js"></script>
<script src="~/scripts/jquery.validate.js"></script>
<script src="~/scripts/jquery.validate.unobtrusive.js"></script>  

<div id="fb-root"></div>

     
     }
